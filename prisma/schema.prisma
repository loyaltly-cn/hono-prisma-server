// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?
  name      String?
  phone     String?  @unique
  openid    String?
  avatar    String?
  createdAt DateTime @default(now())
}
